<Window x:Class="monolith.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="383" Width="416">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Usuário" Margin="0,10,0,5"/>
            <TextBox Name="txtUsuario" Height="30" />

            <TextBlock Text="Código da Empresa" Margin="0,10,0,5"/>
            <ComboBox Name="cmbCodigoEmpresa" Height="30" />

            <TextBlock Text="Senha" Margin="0,10,0,5"/>
            <PasswordBox Name="txtSenha" Height="30" />

            <Button Content="Entrar" Width="100" Margin="0,20,0,0" HorizontalAlignment="Center" Click="BtnEntrar_Click" />
        </StackPanel>
    </Grid>
</Window>
