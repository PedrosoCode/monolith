<UserControl x:Class="monolith.ativos.cadAtivos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="WhiteSmoke">

    <TabControl x:Name="MainTabControl">
        <!-- Aba de Listagem -->
        <TabItem Header="Listagem" x:Name="TabListagem">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <StackPanel>
                            <Label Content="Código"/>
                            <TextBox Name="txtCodigo" Width="100" Margin="5"/>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="Código Cliente"/>
                            <TextBox Name="txtCodigoCliente" Width="150" Margin="5"/>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="Número de Série"/>
                            <TextBox Name="txtNumeroSerie" Width="150" Margin="5"/>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="Código Fabricante"/>
                            <TextBox Name="txtCodigoFabricante" Width="150" Margin="5"/>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="Modelo"/>
                            <TextBox Name="txtModelo" Width="150" Margin="5"/>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="Observação"/>
                            <TextBox Name="txtObservacao" Width="150" Margin="5"/>
                        </StackPanel>
                        <Button Content="Filtrar" Click="BtnFiltrar_Click" Margin="5" VerticalAlignment="Bottom" Width="64"/>
                    </StackPanel>

                    <DataGrid Name="dgAtivos" AutoGenerateColumns="False" Grid.Row="1" Margin="5"
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Código" Binding="{Binding ID}" Width="100"/>
                            <DataGridTextColumn Header="Código Cliente" Binding="{Binding CodigoCliente}" Width="150"/>
                            <DataGridTextColumn Header="Número de Série" Binding="{Binding NumeroSerie}" Width="150"/>
                            <DataGridTextColumn Header="Código Fabricante" Binding="{Binding CodigoFabricante}" Width="150"/>
                            <DataGridTextColumn Header="Modelo" Binding="{Binding Modelo}" Width="150"/>
                            <DataGridTextColumn Header="Observação" Binding="{Binding Observacao}" Width="150"/>
                            <DataGridTextColumn Header="Data de Entrada" Binding="{Binding DataInput, StringFormat=\{0:dd/MM/yyyy\}}" Width="150"/>
                            <DataGridTextColumn Header="Código Empresa" Binding="{Binding CodigoEmpresa}" Width="100"/>
                            <DataGridTemplateColumn Header="Ações" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Editar" Click="BtnEditar_Click" Tag="{Binding ID}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </ScrollViewer>
        </TabItem>

        <!-- Aba de Detalhes do Ativo -->
        <TabItem Header="Dados do Ativo" x:Name="TabDetalhes" Visibility="Collapsed">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <!-- Coluna principal -->
                        <ColumnDefinition Width="1*"/>
                        <!-- Coluna secundária -->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Linha para GroupBox maior -->
                        <RowDefinition Height="*"/>
                        <!-- Linha para GroupBox menor -->
                    </Grid.RowDefinitions>

                    <!-- GroupBox Maior -->
                    <GroupBox Header="Informações do Ativo" Grid.Row="0" Grid.ColumnSpan="2" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="5">
                                <Label Content="Documento"/>
                                <TextBox Name="txtDocumento" Width="100"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <Label Content="Nome Fantasia"/>
                                <TextBox Name="txtNomeFantasia" Width="160"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <Label Content="Razão Social"/>
                                <TextBox Name="txtRazaoSocial" Width="160"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <Label Content="E-Mail"/>
                                <TextBox Name="txtEmail" Width="150"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <Label Content="Contato"/>
                                <TextBox Name="txtContato" Width="100"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <Label Content="Telefone"/>
                                <TextBox Name="txtTelefone" Width="100"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <Label Content="Tipo"/>
                                <ComboBox x:Name="cboTipo" IsEditable="True" IsTextSearchEnabled="True" SelectedValuePath="Codigo" Width="100"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- GroupBox Menor 1 -->
                    <GroupBox Header="Localização" Grid.Row="1" Grid.Column="0" Margin="5">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <StackPanel Margin="5">
                                    <Label Content="País"/>
                                    <ComboBox x:Name="cboPais" IsEditable="True" IsTextSearchEnabled="True" SelectedValuePath="Codigo" Width="100"/>
                                </StackPanel>
                                <!--<StackPanel Margin="5">
                            <Label Content="Estado"/>
                            <ComboBox x:Name="cboEstado" IsEditable="True" IsTextSearchEnabled="True" DisplayMemberPath="Value" SelectedValuePath="Key" Width="100" SelectionChanged="cboEstado_SelectionChanged"/>
                        </StackPanel>-->
                                <StackPanel Margin="5">
                                    <Label Content="Cidade"/>
                                    <ComboBox x:Name="cboCidade" IsEditable="True" IsTextSearchEnabled="True" SelectedValuePath="Codigo" Width="150"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- GroupBox Menor 2 -->
                    <GroupBox Header="Outras Informações" Grid.Row="1" Grid.Column="1" Margin="5">
                        <StackPanel>
                            <!-- Adicione outros campos conforme necessário -->
                            <Label Content="Informações adicionais podem ser adicionadas aqui"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </ScrollViewer>
        </TabItem>

    </TabControl>
</UserControl>
